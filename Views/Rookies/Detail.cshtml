@model Person
@{
    ViewData["Title"] = "Person Detail";
}
<div>
    <a href="@Url.ActionLink("Index", "Rookies")" class="btn btn-info mr-5"><i class="fa fa-arrow-left mr-2"
            aria-hidden="true"></i>Back</a>
    <h3 class="d-inline-block mb-0">@ViewData["Title"]</h3>
</div>
<hr />
<div>@ViewBag.Data</div>
<div class="form-horizontal row">
    <div class="form-group col-6">
        @Html.LabelFor(model => model.FirstName)
        @*@Html.ValueFor: get value for label. label have input type is disable*@
        <label class="form-control">@Html.ValueFor(model => model.FirstName)</label>
    </div>

    <div class="form-group col-6">
        @Html.LabelFor(model => model.LastName)
        <label class="form-control">@Html.ValueFor(model => model.LastName)</label>
    </div>

    <div class="form-group col-6">
        @Html.LabelFor(model => model.Gender)
        <label class="form-control">@Html.ValueFor(model => model.Gender)</label>
    </div>

    <div class="form-group col-6">
        @Html.LabelFor(model => model.DateOfBirth)
        <label class="form-control">@Html.ValueFor(model => model.DateOfBirth)</label>
    </div>

    <div class="form-group col-6">
        @Html.LabelFor(model => model.PhoneNumber)
        <label class="form-control">@Html.ValueFor(model => model.PhoneNumber)</label>
    </div>

    <div class="form-group col-6">
        @Html.LabelFor(model => model.Email)
        <label class="form-control">@Html.ValueFor(model => model.Email)</label>
    </div>

    <div class="form-group col-6">
        @Html.LabelFor(model => model.BirthPlace)
        <label class="form-control">@Html.ValueFor(model => model.BirthPlace)</label>
    </div>

    <div class="form-group col-6">
    <a href="@Url.ActionLink("Delete", "Rookies", new {id = Model.Id})" class="btn btn-danger btn-sm"
              role="button"><i class="fa fa-trash-o mr-2" aria-hidden="true"></i>Delete</a>
    </div>

    @* <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
        <input type="submit" value="Save" class="btn btn-success" />
        </div>
        </div> *@

</div>
